<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|center"
            android:gravity="top|center">

            <ImageView
                android:id="@+id/iv_event_logo"
                android:layout_width="match_parent"
                android:layout_height="470dp"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_event_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_event_logo"
                android:layout_margin="@dimen/margin_five"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Header"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size_header" />

            <TextView
                android:id="@+id/tv_event_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_event_header"
                android:layout_margin="@dimen/margin_five"
                android:ellipsize="end"
                android:text="Message"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tv_event_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_event_message"
                android:layout_margin="@dimen/margin_five"
                android:ellipsize="end"
                android:text="www.google.com"
                android:textColor="@android:color/holo_blue_dark" />

            <ImageView
                android:id="@+id/iv_close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@mipmap/error" />
        </RelativeLayout>
    </ScrollView>


</android.support.v7.widget.CardView>


